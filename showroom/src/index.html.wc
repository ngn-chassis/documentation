    <!-- <script src="webcomponents/author-datalist-es5.js"></script> -->
  </head>

  <body class="authorio showroom">

    <header>
      <div class="width constraint">
        <h1>NGN Chassis Documentation</h1>
        <aside class="links">
          <h2 class="hidden">Navigation</h2>
          <a href="javascript:;">Showroom</a>
          <a href="https://github.com/ngnjs" target="_blank">Github</a>
        </aside>
      </div>
    </header>

    <main>
      <aside class="sidebar">
        <h2 class="hidden">Sidebar</h2>

        <nav>
          <h2 class="hidden">Sections</h2>
          <a href="#typography_section">
            Typography
          </a>
          <a href="#layout_section">
            Layout
          </a>
          <a href="#components_section">
            UI Components
          </a>
        </nav>
      </aside>

      <div class="content">
        <div class="test-hey">
          <div class="box">
            BOX
          </div>

          <div class="green box">
            GREEN BOX
          </div>
        </div>

        <form>
          <label>Name</label>
          <input id="test_input" type="text" required>

          <label>Age</label>
          <input type="number" required>

          <label>Favorite Foods</label>
          <select id="test_select" multiple required>
            <option>Chocolate</option>
            <option>Flax</option>
            <option>Elderberries</option>
          </select>

          <fieldset>
            <legend>I am:</legend>

            <label>Awesome</label>
            <input type="checkbox">

            <label>Hungry</label>
            <input type="checkbox">

            <label>Bored</label>
            <input type="checkbox">
          </fieldset>

          <button type="submit">Submit</button>
        </form>

        <author-form>
          <author-fieldset>
            <author-control>
              <label>Name</label>
              <input type="text"  required>
            </author-control>

            <author-control>
              <label>Age</label>
              <input type="number" name="age" required>
            </author-control>

            <author-control>
              <label>Favorite Foods</label>
              <select name="favorite-foods" multiple required>
                <option>Chocolate</option>
                <option>Flax</option>
                <option>Elderberries</option>
              </select>
            </author-control>
          </author-fieldset>

          <author-fieldset>
            <legend>I am:</legend>

            <author-control>
              <label>Awesome</label>
              <input name="iam-awesome" type="checkbox">
            </author-control>

            <author-control>
              <label>Hungry</label>
              <input name="iam-hungry" type="checkbox">
            </author-control>

            <author-control>
              <label>Bored</label>
              <input name="iam-bored" type="checkbox">
            </author-control>
          </author-fieldset>

          <button type="submit">Submit</button>
          <button type="reset">Reset</button>
        </author-form>
      </div>

      <script>
        window.addEventListener('DOMContentLoaded', evt => {
          window.form = document.querySelector('form')
          window.authorForm = document.querySelector('author-form')

          window.authorForm.addEventListener('submit', evt => {
            console.log(evt);
          })

          window.authorForm.addEventListener('invalid', evt => {
            console.log(evt);
          })

          // for (let control of window.authorForm.controls) {
